<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UbahPasswordActivity">

    <include
        layout="@layout/custom_actionbar_sandi"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="4dp"
        android:textSize="@dimen/font_medium"
        android:textColor="@color/colorDarkBlack"
        android:layout_marginRight="45dp"
        android:text="Password :"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="@dimen/font_small_medium"
        android:hint="@string/register_password"
        android:id="@+id/etpassword_register_ubah"
        android:textColor="@color/colorBlack"
        android:inputType="textPassword"
        android:textColorHint="@color/colorBlackHint"
        android:background="@drawable/style_register_edittext"
        android:paddingLeft="17dp"
        android:drawablePadding="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="4dp"
        android:textSize="@dimen/font_medium"
        android:textColor="@color/colorDarkBlack"
        android:layout_marginRight="45dp"
        android:text="Password Confirm :"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="@dimen/font_small_medium"
        android:hint="Password Confirm"
        android:inputType="textPassword"
        android:id="@+id/etpassword_confirm_ubah"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorBlackHint"
        android:background="@drawable/style_register_edittext"
        android:paddingLeft="17dp"
        android:drawablePadding="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />


    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/btnubahpass"
        android:text="Ubah Password"
        android:textSize="@dimen/font_medium"
        android:textColor="@color/colorWhite"
        android:background="@drawable/style_register_button"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        />

</LinearLayout>